#!/usr/bin/env bash

# Create a new core.async release

set -ex

cd `dirname $0`/../..

version_template=`cat VERSION_TEMPLATE`

git_revision=`script/build/git_revision`

prefix=${version_template%%GENERATED_VERSION*}
tag=v$prefix$git_revision

script/build/pom

if [ "$HUDSON" = "true" ]; then
    mvn -DskipStaging=true -Dclojure.version=1.6.0 clean deploy release:prepare release:perform

    echo "Creating tag $tag"
    git tag -f "$tag"
    git push origin "$tag"
else
    echo "Skipping remote deployment and Git tag because we are not on Jenkins."
    mvn clean install
fi

